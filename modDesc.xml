<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<modDesc descVersion="63">
    <author>Falkkor</author>
    <version>1.1.0.0</version>
    
    <title>
        <en>Snap Build</en>
    </title>
    
    <description>
        <en><![CDATA[This mod for FS22 enables any building to snap at 45 degree angle rotation increments when placing it.]]></en>
        <de><![CDATA[Dieser Mod für FS22 ermöglicht es jedem Gebäude, beim Platzieren in 45-Grad-Winkelrotationsschritten einzurasten.]]></de>
        <fr><![CDATA[Ce mod pour FS22 permet à n'importe quel bâtiment de s'accrocher à des incréments de rotation d'angle de 45 degrés lors de son placement.]]></fr>
    </description>
    
    <iconFilename>icon.dds</iconFilename>
    <multiplayer supported="true" />
    
    <extraSourceFiles>
        <sourceFile filename="snapBuild.lua" />
    </extraSourceFiles>
    
    <l10n>
        <text name="SNAPBUILD_RESET">
			<en>Snap Build Reset</en>
			<de>Schnapp Bauen Reset</de>
			<fr>Se Casser Construire Reset</fr>
		</text>
        <text name="SNAPBUILD_POSITION">
			<en>Snap Build Position:</en>
			<de>Schnapp Bauen Position:</de>
			<fr>Se Casser Construire Position:</fr>
		</text>
        <text name="SNAPBUILD_ROTATION">
			<en>Snap Build Rotation:</en>
			<de>Schnapp Bauen Rotation:</de>
			<fr>Se Casser Construire Rotation:</fr>
		</text>
	</l10n>

    <actions>
        <action name="SNAPBUILD_RESET" category="SYSTEM" ignoreComboMask="false" />
        <action name="SNAPBUILD_POSITION" category="SYSTEM" ignoreComboMask="false" />
        <action name="SNAPBUILD_ROTATION" category="SYSTEM" ignoreComboMask="false" />
    </actions>

    <inputBinding>
        <actionBinding action="SNAPBUILD_RESET">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_5" axisComponent="+" neutralInput="0" index="1"/>
        </actionBinding>
        <actionBinding action="SNAPBUILD_POSITION">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_6" axisComponent="+" neutralInput="0" index="1"/>
        </actionBinding>
        <actionBinding action="SNAPBUILD_ROTATION">
            <binding device="KB_MOUSE_DEFAULT" input="KEY_lalt KEY_7" axisComponent="+" neutralInput="0" index="1"/>
        </actionBinding>
    </inputBinding>
</modDesc>